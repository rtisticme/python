def isMobileNumber(text): 
    if len(text) !=15:
        return False #not phone number-Sized
    if text[0] != '+':
        return False #not + at the start 
    for i in range (1,4):
        if not text[i].isdecimal():
            return False #no area code
    if text[4] != '-' :
        return False #missing dash
    for i in range(5,15):
        if not text[i].isdecimal() :
            return False #no last digits
    return True 

def isPhoneNumber(text):
    if len(text) !=10:
        return False #not phone number-Sized
    for i in range (0,1):
        if not text[i].isdecimal():
            return False #no area code
    if text[2] != '-' :
        return False #missing dash
    for i in range(3,10):
        if not text[i].isdecimal() :
            return False #no last digits
    return True #if all condition is satisfied return true 

message = 'Call the number +977-9840067948 tomorrow, or a number 01-4436889 if you are looking for a appointment with me'
foundNumber = False #initialization
for i in range(len(message)) :
    chunkMobile = message[i:i+15] #checks 15 digit string in the message 
    if isMobileNumber (chunkMobile) :
        print('Mobile number Found: ' + chunkMobile)
        foundNumber = True
    chunkPhone = message[i:i+10] #checks 10 digits string in the maessage
    if isPhoneNumber (chunkPhone) :
        print('Phone number Found: ' + chunkPhone)
        foundNumber = True
if not foundNumber:
    print ('Could not find a number')

#---------------------------------------------------------------------------------------------------------------------
#using built in function 
import re

message ='message Call the number +977-9840067948 tomorrow, or a number 01-4436889 if you are looking for a appointment with me'
    
mobileNumber = re.compile (r'\+\d\d\d-\d\d\d\d\d\d\d\d\d\d') #pattern  d-digits 
phoneNumber = re.compile (r'\d\d-\d\d\d\d\d\d\d')#pattern  d-digits , raw string is standard 
mn=mobileNumber.search(message) #to find a single occurence
print(mn.group())
pn=phoneNumber.search(message)
print(pn.group())
print(mobileNumber.findall(message)) #to find all the occurences 
print(phoneNumber.findall(message)) 
